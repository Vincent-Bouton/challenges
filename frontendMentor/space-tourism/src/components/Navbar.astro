---

const navLink = [
    {
        name: 'Home',
        link: '/'
    },
    {
        name: 'Destination',
        link: '/destination'
    },
    {
        name: 'Crew',
        link: '/crew'
    },
    {
        name: 'Technology',
        link: '/technology'
    }
]
---
<nav class="relative transform -translate-x-[110px]">
    <div class="absolute -z-10 bg-white bg-opacity-5 backdrop-blur-2xl w-screen h-full"></div>
    <ul class="flex justify-center min-h-[100px] nav-text uppercase pl-[123px] pr-16 gap-[40px]">
        {
            navLink.map((link, index) => (
                <li class="h-[100px]">
                    <a href={link.link} class="h-full nav-text flex items-center gap-1 px-3">
                        <span class="font-bold">0{index}</span>
                        <span>{link.name}</span>

                    </a>
                </li>
            ))
        }
    </ul>
</nav>
