---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro'
const {title, description, bg} = Astro.props
import '../style/global.css'
---
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" href="/favicon.svg" type="image/x-icon" />
        <title>{title}</title>
        <meta name="description" content={description} />
		<ViewTransitions />
    </head>
    <body class="bg-black bg-cover bg-center min-h-screen bg-no-repeat overflow-hidden" style={`background-image: url(${bg})`}>
        <div class="mx-auto xl:max-w-[1024px] max-w-[1440px] px-[55px] lg:px-4">
			<Header />
            <slot />
        </div>
    </body>
</html>